{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
